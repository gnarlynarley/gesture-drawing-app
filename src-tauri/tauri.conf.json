{
  "$schema": "https://schema.tauri.app/config/2.0.0-rc",
  "productName": "Gesture drawing",
  "version": "0.6.3",
  "identifier": "com.gesture-drawing.app",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Gesture drawing",
        "resizable": true,
        "maximized": true,
        "hiddenTitle": true,
        "decorations": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
